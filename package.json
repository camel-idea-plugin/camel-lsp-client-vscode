{
  "name": "vscode-apache-camel",
  "displayName": "Language Support for Apache Camel",
  "description": "Provides completion and documentation features for Apache Camel URI elements in XML DSL.",
  "license": "Apache-2.0",
  "version": "0.0.8",
  "preview": true,
  "publisher": "camel-tooling",
  "icon": "icons/icon128.png",
  "maintainers": [
    {
      "name": "Aurélien Pupier",
      "email": "aurelien.pupier@gmail.com"
    },
    {
      "name": "Lars Heinemann",
      "email": "lhein.smx@gmail.com"
    }
  ],
  "author": {
    "name": "Aurélien Pupier"
  },
  "bugs": {
    "url": "https://github.com/camel-tooling/camel-lsp-client-vscode/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/camel-tooling/camel-lsp-client-vscode.git"
  },
  "homepage": "https://github.com/camel-tooling/camel-lsp-client-vscode",
  "keywords": [
    "Camel",
    "LSP",
    "Language Server Protocol",
    "Tool"
  ],
  "engines": {
    "vscode": "^1.23.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:xml",
    "workspaceContains:*.xml",
    "onLanguage:java",
    "workspaceContains:*.java"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "xml",
        "extensions": [
          ".xml"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "java",
        "extensions": [
          ".java"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "preinstall": "node ./scripts/preinstall.js",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test",
    "tslint": "gulp tslint"
  },
  "devDependencies": {
    "@types/glob": "5.0.30",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "mvn-artifact-download": "^3.1.0",
    "gulp": "^4.0.0",
    "gulp-tslint": "^6.1.2",
    "mocha": "^5.2.0",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3",
    "vsce": "^1.39.0",
    "vscode": "^1.1.18"
  },
  "dependencies": {
    "decompress": "^4.0.0",
    "expand-home-dir": "^0.0.3",
    "find-java-home": "0.1.4",
    "glob": "^7.1.1",
    "http-proxy-agent": "^2.1.0",
    "https-proxy-agent": "^2.2.1",
    "path-exists": "^3.0.0",
    "progress-stream": "^1.2.0",
    "tmp": "^0.0.31",
    "vscode-languageclient": "^4.1.4"
  }
}
